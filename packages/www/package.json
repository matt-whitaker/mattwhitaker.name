{
  "name": "@mattwhitaker.name/www",
  "version": "0.0.1",
  "description": "Website files and build system",
  "scripts": {
    "build": "npm run less && npm run ejs && npm run images",
    "ejs": "./bin/generate.js",
    "images": "cp -r ./images ./dist/images",
    "lint:less": "stylelint style/**/*.less --fix",
    "less": "lessc style/style.less dist/style.css",
    "start": "npm rum build && http-server ./dist -p 8080 -o -r"
  },
  "author": "Matt Whitaker (https://mattwhitaker.name)",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "ejs": "^3.1.9",
    "less": "4.2.0",
    "markdown-it": "^13.0.2",
    "stylelint": "15.11.0",
    "stylelint-config-standard": "34.0.0",
    "stylelint-config-standard-less": "2.0.0"
  },
  "dependencies": {
    "args": "^5.0.3",
    "http-server": "^14.1.1"
  }
}
